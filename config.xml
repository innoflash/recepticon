<?xml version='1.0' encoding='utf-8'?>
<widget id="net.innoflash.recepticon" version="1.0.0" 
    xmlns="http://www.w3.org/ns/widgets">
    <name>Recepticon</name>
    <description>
        Online Receipting platform
    </description>
    <author email="innocentmazando@gmail.com" href="https://innoflash.net">
        Innocent Mazando
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.4.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-universal-links-plugin" spec="~1.2.1" />
    <plugin name="cordova-plugin-browsertab" spec="~0.2.0" />
    <plugin name="cordova-plugin-customurlscheme" spec="~4.3.0">
        <variable name="URL_SCHEME" value="net.innoflash.recepticon" />
    </plugin>
    <universal-links>
        <host name="https://recepticon.page.link/V9Hh" scheme="https" />
        <host name="recepticon-2ebcb.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.4.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-battery-status" spec="~2.0.2" />
    <plugin name="cordova-plugin-camera" spec="~4.0.3" />
    <plugin name="cordova-plugin-device" spec="~2.0.2" />
    <plugin name="cordova-plugin-dialogs" spec="~2.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.1" />
    <plugin name="cordova-plugin-globalization" spec="~1.11.0" />
    <plugin name="cordova-plugin-network-information" spec="~2.0.1" />
    <plugin name="cordova-plugin-vibration" spec="~3.1.0" />
    <plugin name="cordova-plugin-buildinfo" spec="~2.0.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.0.0" />
</widget>
